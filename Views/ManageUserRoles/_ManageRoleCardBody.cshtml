                                    <input type="hidden" asp-for="@Model.listManageUserRolesDetails[i].RoleName" />
                                    @if (Model.listManageUserRolesDetails[i].IsAllowed)
                                    {
                                        <div class="form-check m-1 CustomBG">
                                            <input type="checkbox" asp-for="@Model.listManageUserRolesDetails[i].IsAllowed"
                                        id="@Model.listManageUserRolesDetails[i].RoleId" />
                                            <span>@Model.listManageUserRolesDetails[i].RoleName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check m-1">
                                            <input type="checkbox" asp-for="@Model.listManageUserRolesDetails[i].IsAllowed"
                                        id="@Model.listManageUserRolesDetails[i].RoleId" />
                                            <span>@Model.listManageUserRolesDetails[i].RoleName</span>
                                        </div>
                                    }
                                </td>
                            </tr>
                            index++;
                            LastCount = i;
                        }
                    }
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
