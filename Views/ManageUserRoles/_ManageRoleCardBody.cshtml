@model HMS.Models.ManageUserRolesVM.ManageUserRolesCRUDViewModel
@{
    ViewData["Title"] = "Manage Role";
}

<div class="row">
    @{
        var Dataset = Model.listManageUserRolesDetails;
        var TotalRow = Dataset.Count;
        var LastCount = 0;
        <div class="col-sm-4">
            <table class="CustomBlueTable" id="myTable1" border="1">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Role Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
