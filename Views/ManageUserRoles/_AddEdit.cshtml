@model HMS.Models.ManageUserRolesVM.ManageUserRolesCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmUserRoles">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Left Menu Image:</label>

                    <div class="col-sm-9">

                        <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" class="img-fluid" style="max-width: 200px; background-color:dimgray" />


                        <input type="file" id="ProfilePictureDetails" name="ProfilePictureDetails" accept="image/*" onchange="validateImageFile(this)">
                        <span class="text-danger" id="profilePictureError"></span>
                        <p>&nbsp;</p>
                        <input type="hidden" asp-for="ImageId" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Dashboard Picture:</label>

                    <div class="col-sm-9">

                        <img src="@Url.Content(Model.DashboardPicture)" alt="Dashboard Picture" class="img-fluid" style="max-width: 200px; background-color:dimgray"   />

                        <input type="file" id="DashboardPictureDetails" name="DashboardPictureDetails" accept="image/*" onchange="validateImageFile(this)">
                        <span class="text-danger" id="dashboardPictureError"></span>
                        <p>&nbsp;</p>
                        <input type="hidden" asp-for="DashboardImageId" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="button" id="btnSave" value="Save" onclick="Save()" class="btn btn-info">
                        <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
         
                <hr />
                <h2>Select Role</h2>
                <partial name="_ManageRole" />
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
