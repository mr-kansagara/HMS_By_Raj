@model HMS.Models.LabTestConfigurationViewModel.LabTestConfigurationCRUDViewModel

@{ ViewData["Title"] = "Create"; }

<div>
    <div class="row">
        <span><b>Lab Test ID:</b></span>
        <label id="LabTestsId">@Model.LabTestsId</label>&nbsp;&nbsp;&nbsp;
        <span><b>Lab Test Name:</b></span>
        <label id="LabTestName">@Model.LabTestName</label>&nbsp;&nbsp;&nbsp;
        <span><b>Lab Test Category:</b> @Model.LabTestCategoryName</span>
        <hr />

        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" id="Id" />

            <div class="form-group row">
                <label asp-for="NameOfTest" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="NameOfTest" id="NameOfTest" class="form-control" />
                    <span asp-validation-for="NameOfTest" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="NormalValue" class="col-sm-5 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="NormalValue" id="NormalValue" class="form-control" />
                            <span asp-validation-for="NormalValue" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Sorting" class="col-sm-5 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="Sorting" id="Sorting" class="form-control" />
                            <span asp-validation-for="Sorting" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Result" class="col-sm-5 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="Result" id="Result" class="form-control" />
                            <span asp-validation-for="Result" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ReportGroup" class="col-sm-5 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="ReportGroup" id="ReportGroup" class="form-control" />
                            <span asp-validation-for="ReportGroup" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="button" onclick="UpdateLabTestConfigurationItemDB()" value="Save" class="btn btn-info">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

