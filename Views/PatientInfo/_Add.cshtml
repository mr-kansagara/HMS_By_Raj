@model HMS.Models.PatientInfoViewModel.PatientInfoCRUDViewModel

@{
    ViewData["Title"] = "Create";
}


<div>
    <form id="frmPatientInfo" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ApplicationUserId" />
        <input type="hidden" asp-for="PatientCode" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />

        <div class="col-12 col-sm-12">
            <div class="card card-primary card-outline card-tabs">
                <div class="card-header p-0 pt-1 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="BasicInfo" data-toggle="pill" href="#divBasicInfo" role="tab"
                                aria-controls="BasicInfo" aria-selected="true">Basic Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="OtherTab" data-toggle="pill" href="#divOtherTab" role="tab"
                                aria-controls="OtherTab" aria-selected="false">Other Info</a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="tab-content" id="tabContent">
                        <div class="tab-pane fade show active" id="divBasicInfo" role="tabpanel"
                            aria-labelledby="divBasicInfo">
                            <div class="row">
                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="FirstName" class="form-control" type="text" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="LastName" class="form-control" type="text" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="Email" class="form-control" type="text" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                 
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Password</label>
                                            <div class="col-sm-9">
                                                <input asp-for="PasswordHash" class="form-control" id="PasswordHash"
                                                       type="password" />
                                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                            </div>
                                        </div>                                                                
                                        <div class="form-group row">
                                            <label class="col-sm-4 col-form-label">Confirm Password</label>
                                            <div class="col-sm-8">
                                                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword"
                                                       type="password" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>           
                                    <div class="form-group row">
                                        <label asp-for="RoleId" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="RoleId" asp-items="@ViewBag.ddlManageUserRoles" id="RoleId"
                                                    class="form-control" style="width:100%;">
                                                <option disabled selected>--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="RoleId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="MaritalStatus" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="MaritalStatus" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="Single">Single</option>
                                                <option value="Married">Married</option>
                                                <option value="Divorced">Divorced</option>
                                                <option value="Other">Other</option>
                                            </select>
                                            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Gender" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="Gender" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                            </select>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="DateOfBirth" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="SpouseName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="SpouseName" class="form-control" type="text" />
                                            <span asp-validation-for="SpouseName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="BloodGroup" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="BloodGroup" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="A+">A+</option>
                                                <option value="A-">A-</option>
                                                <option value="B+">B+</option>
                                                <option value="B-">B-</option>
                                                <option value="O+">O+</option>
                                                <option value="O-">O-</option>
                                                <option value="AB+">AB+</option>
                                                <option value="AB-">AB-</option>
                                            </select>
                                            <span asp-validation-for="BloodGroup" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="FatherName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="FatherName" class="form-control" type="text" />
                                            <span asp-validation-for="FatherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="MotherName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="MotherName" class="form-control" type="text" />
                                            <span asp-validation-for="MotherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProfilePicture" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <span class="control-fileupload">
                                                <label for="file">Choose a file :</label>
                                                <input type="file" asp-for="ProfilePictureDetails" />
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="divOtherTab" role="tabpanel" aria-labelledby="divOtherTab">
                            <div class="row">
                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="RegistrationFee" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="RegistrationFee" class="form-control" type="text" />
                                            <span asp-validation-for="RegistrationFee" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Phone" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="Phone" class="form-control" type="text" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Country" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="Country" class="form-control" type="datetime" />
                                            <span asp-validation-for="Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <textarea asp-for="Address" class="form-control" id="Address"></textarea>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="Agreement" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="Agreement" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="true">Yes</option>
                                                <option value="false">No</option>
                                            </select>
                                            <span asp-validation-for="Agreement" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Remarks" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <textarea asp-for="Remarks" class="form-control" id="Remarks"></textarea>
                                            <span asp-validation-for="Remarks" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <input type="submit" value="Save" class="btn btn-info">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
