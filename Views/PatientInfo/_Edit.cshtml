@model HMS.Models.PatientInfoViewModel.ManagePatientInfoViewModel

@{
    ViewData["Title"] = "Create";
}


<div>
    <form  asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PatientInfoEditViewModel.Id" />
        <input type="hidden" asp-for="PatientInfoEditViewModel.ApplicationUserId" />
        <input type="hidden" asp-for="PatientInfoEditViewModel.CreatedDate" />
        <input type="hidden" asp-for="PatientInfoEditViewModel.CreatedBy" />

        <input type="hidden" asp-for="UserProfileCRUDViewModel.UserProfileId" />
        <input type="hidden" asp-for="UserProfileCRUDViewModel.ApplicationUserId" />
        <input type="hidden" asp-for="UserProfileCRUDViewModel.ProfilePicture" />
        <input type="hidden" asp-for="UserProfileCRUDViewModel.RoleId" />
        <input type="hidden" asp-for="UserProfileCRUDViewModel.CreatedDate" />
        <input type="hidden" asp-for="UserProfileCRUDViewModel.CreatedBy" />

        <div class="col-12 col-sm-12">
            <div class="card card-primary card-outline card-tabs">
                <div class="card-header p-0 pt-1 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="BasicInfo" data-toggle="pill" href="#divBasicInfo" role="tab"
                                aria-controls="BasicInfo" aria-selected="true">Basic Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="OtherTab" data-toggle="pill" href="#divOtherTab" role="tab"
                                aria-controls="OtherTab" aria-selected="false">Other Info</a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="tab-content" id="tabContent">
                        <div class="tab-pane fade show active" id="divBasicInfo" role="tabpanel"
                            aria-labelledby="divBasicInfo">
                            <div class="row">
                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.FirstName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.FirstName" class="form-control" type="text" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.LastName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.LastName" class="form-control" type="text" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.Email" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.Email" class="form-control" type="text" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                        <!-- Hidden fields for password and confirm password -->
                                    <input type="hidden" asp-for="UserProfileCRUDViewModel.PasswordHash" />
                                        <!-- hidden fields for password and confirm password -->
                                    <input type="hidden" asp-for="UserProfileCRUDViewModel.ConfirmPassword" />

                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.RoleId" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="UserProfileCRUDViewModel.RoleId" asp-items="@ViewBag.ddlManageUserRoles" id="RoleId"
                                                    class="form-control" style="width:100%;">
                                                <option disabled selected>--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="UserProfileCRUDViewModel.RoleId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.MaritalStatus" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="PatientInfoEditViewModel.MaritalStatus" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="Single">Single</option>
                                                <option value="Married">Married</option>
                                                <option value="Divorced">Divorced</option>
                                                <option value="Other">Other</option>
                                            </select>
                                            <span asp-validation-for="PatientInfoEditViewModel.MaritalStatus" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.Gender" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="PatientInfoEditViewModel.Gender" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                            </select>
                                            <span asp-validation-for="PatientInfoEditViewModel.Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.DateOfBirth" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.DateOfBirth" class="form-control" type="date" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.SpouseName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="PatientInfoEditViewModel.SpouseName" class="form-control" type="text" />
                                            <span asp-validation-for="PatientInfoEditViewModel.SpouseName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.BloodGroup" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="PatientInfoEditViewModel.BloodGroup" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="A+">A+</option>
                                                <option value="A-">A-</option>
                                                <option value="B+">B+</option>
                                                <option value="B-">B-</option>
                                                <option value="O+">O+</option>
                                                <option value="O-">O-</option>
                                                <option value="AB+">AB+</option>
                                                <option value="AB-">AB-</option>
                                            </select>
                                            <span asp-validation-for="PatientInfoEditViewModel.BloodGroup" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.FatherName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="PatientInfoEditViewModel.FatherName" class="form-control" type="text" />
                                            <span asp-validation-for="PatientInfoEditViewModel.FatherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.MotherName" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="PatientInfoEditViewModel.MotherName" class="form-control" type="text" />
                                            <span asp-validation-for="PatientInfoEditViewModel.MotherName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.ProfilePicture" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <span class="control-fileupload">
                                                <label for="file">Choose a file :</label>
                                                <input type="file" asp-for="UserProfileCRUDViewModel.ProfilePictureDetails" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.DateOfBirth" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.DateOfBirth" class="form-control" type="datetime" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="divOtherTab" role="tabpanel" aria-labelledby="divOtherTab">
                            <div class="row">
                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.RegistrationFee" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="PatientInfoEditViewModel.RegistrationFee" class="form-control" type="text" />
                                            <span asp-validation-for="PatientInfoEditViewModel.RegistrationFee" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.PhoneNumber" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.PhoneNumber" class="form-control" type="text" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.Country" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="UserProfileCRUDViewModel.Country" class="form-control" type="datetime" />
                                            <span asp-validation-for="UserProfileCRUDViewModel.Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserProfileCRUDViewModel.Address" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <textarea asp-for="UserProfileCRUDViewModel.Address" class="form-control" id="Address"></textarea>
                                            <span asp-validation-for="UserProfileCRUDViewModel.Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6 col-sm-6">
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.Agreement" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="PatientInfoEditViewModel.Agreement" class="form-control">
                                                <option disabled selected>--- SELECT ---</option>
                                                <option value="true">Yes</option>
                                                <option value="false">No</option>
                                            </select>
                                            <span asp-validation-for="PatientInfoEditViewModel.Agreement" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PatientInfoEditViewModel.Remarks" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <textarea asp-for="PatientInfoEditViewModel.Remarks" class="form-control" id="Remarks"></textarea>
                                            <span asp-validation-for="PatientInfoEditViewModel.Remarks" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <input type="submit" value="Save" class="btn btn-info">
                        <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $(document).ready(function () {
        $("#RoleId").select2();
        $("#DesignationId").select2();
    });
</script>
