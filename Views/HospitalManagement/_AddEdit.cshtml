@model HMS.Models.HospitalViewModel.HospitalCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddEdit" id="frmHospital">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="@Model.CreatedDate" />
                <input type="hidden" asp-for="@Model.CreatedBy" />

                <div class="form-group">
                    <label asp-for="HospitalName" class="control-label"></label>
                    <input asp-for="HospitalName" class="form-control" />
                    <span asp-validation-for="HospitalName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Hospital Image :</label>

                    <div class="col-sm-9">

                        <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" class="img-fluid" style="max-width: 200px; background-color:dimgray" />


                        <input type="file" id="ProfilePictureDetails" name="ProfilePictureDetails" accept="image/*" onchange="validateImageFile(this)">
                        <span class="text-danger" id="profilePictureError"></span>
                        <p>&nbsp;</p>
                        <input type="hidden" asp-for="ImageId" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" value="Save" onclick="Save()" class="btn btn-info">
                    <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
