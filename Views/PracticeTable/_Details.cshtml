@model HMS.Models.PracticeTable.PracticeTableCRUDModel

<div class="row">
    <div class="col-md-12">
        <table class="CustomBlueTable">
            <tr><th>Id</th><td>@Model.Id</td></tr>
            <tr>
                <th>Dashboard Picture</th>
                <td>
                    <div class="user-panel mt-2 pb-2 mb-2 d-flex">
                        <div class="image">
                            <!-- Display the profile picture image -->
                            <img src="@Model.ProfilePath" class="img-circle elevation-2" alt="User Image">
                        </div>
                    </div>
                </td>
            </tr>
            <tr><th>Title</th><td>@Model.Title</td></tr>
            <tr><th>Description</th><td>@Model.Description</td></tr>
            <tr><th>Short Description</th><td>@Model.ShortDescription</td></tr>
        </table>
    </div>
</div>
