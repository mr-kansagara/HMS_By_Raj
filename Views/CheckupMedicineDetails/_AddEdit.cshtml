@model HMS.Models.CheckupMedicineDetailsViewModel.CheckupMedicineDetailsCRUDViewModel

@{ ViewData["Title"] = "Create"; }

<div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />
                <div class="form-group">
                    <label asp-for="VisitId" class="control-label"></label>
                    <input asp-for="VisitId" class="form-control" />
                    <span asp-validation-for="VisitId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MedicineId" class="control-label"></label>
                    <input asp-for="MedicineId" class="form-control" />
                    <span asp-validation-for="MedicineId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoofDays" class="control-label"></label>
                    <input asp-for="NoofDays" class="form-control" />
                    <span asp-validation-for="NoofDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WhentoTake" class="control-label"></label>
                    <input asp-for="WhentoTake" class="form-control" />
                    <span asp-validation-for="WhentoTake" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsBeforeMeal" class="control-label"></label>
                    <input asp-for="IsBeforeMeal" class="form-control" />
                    <span asp-validation-for="IsBeforeMeal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
