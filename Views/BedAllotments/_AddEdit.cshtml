@model HMS.Models.BedAllotmentsViewModel.BedAllotmentsCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />


                @{
                    if (Model.Id > 0)
                    {
                        <div class="row">
                            <div class="col-sm-3">
                                <span><b>Released</b></span>
                            </div>
                            <div class="col-sm-9 fa-pull-left">

                                <input asp-for="IsReleased" class="form-control" type="checkbox" />
                            </div>
                        </div>
                    }
                }

                <div class="form-group">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" asp-items="@ViewBag.LoadddlPatientName" id="PatientId" style="width:100%;">
                        <option disabled selected>--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="BedCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BedCategoryId" class="control-label"></label>
                    <select asp-for="BedCategoryId" asp-items="@ViewBag.LoadddBedCategories" onchange="GetAvailableBedList()"
                            id="BedCategoryId" class="form-control">
                        <option disabled selected>--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="BedCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BedId" class="control-label"></label>
                    <select asp-for="BedId" id="BedId" asp-items="@ViewBag.LoadddlBedNo" class="form-control">
                        <option disabled selected>--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="BedId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OldBedCategoryPrice" class="control-label">Bed Price PerDay</label>
                    @if (ViewBag._IsInAdminRole)
                    {
                        <input asp-for="BedCategoryPrice" id="BedCategoryPrice" class="form-control" />
                    }
                    else
                    {

                        <input asp-for="OldBedCategoryPrice" id="BedCategoryPrice" class="form-control" readonly />
                    }
                </div>
                <div class="form-group">
                    <label asp-for="AllotmentDate" class="control-label"></label>
                    <input asp-for="AllotmentDate" class="form-control" type="date" />
                    <span asp-validation-for="AllotmentDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DischargeDate" class="control-label"></label>
                    <input asp-for="DischargeDate" class="form-control" type="date" />
                    <span asp-validation-for="DischargeDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $(document).ready(function () {
        $("#PatientId").select2();
    });

    // Function to load bed price based on selected category
    function LoadBedPrice() {
        var selectedCategoryId = $('#BedCategoryId').val();
        console.log("LoadBedPrice - selectedCategoryId :" + selectedCategoryId);
        $.ajax({
            url: '/Bed/GetBedPrice', // Corrected URL
            type: 'GET',
            data: { categoryId: selectedCategoryId },
            success: function (data) {
                $('#BedCategoryPrice').val(data);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

</script>